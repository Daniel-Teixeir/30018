<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.edu.ifpr.gep.MainController" stylesheets="@styles.css">
    <left>
        <VBox spacing="10.0" styleClass="side-menu">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Button text="Adicionar" onAction="#handleAdd" styleClass="menu-button" />
            <Button text="Remover" onAction="#handleRemove" styleClass="menu-button" />
            <Button text="Simular" onAction="#handleSimulate" styleClass="menu-button" />
            <Button text="Deletar Tudo" onAction="#handleDeleteAll" styleClass="menu-button" />
        </VBox>
    </left>
    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE">
            <Tab text="Portaria">
                <VBox spacing="10.0">
                    <TableView fx:id="portariaTable" styleClass="table-view">
                        <columns>
                            <TableColumn fx:id="portariaIdColumn" text="ID" prefWidth="50.0" />
                            <TableColumn fx:id="portariaDataColumn" text="Data" prefWidth="100.0" />
                            <TableColumn fx:id="portariaNomeColumn" text="Nome" prefWidth="150.0" />
                            <TableColumn fx:id="portariaPorteiroColumn" text="Porteiro" prefWidth="150.0" />
                            <TableColumn fx:id="portariaEmissorColumn" text="Emissor" prefWidth="150.0" />
                        </columns>
                    </TableView>
                </VBox>
            </Tab>
            <Tab text="Usuário">
                <GridPane hgap="10.0" vgap="10.0" styleClass="form-grid">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    <Label text="Foto de Perfil:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <HBox spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <ImageView fx:id="profileImage" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" />
                        <Button text="Carregar Foto" onAction="#handleUploadPhoto" styleClass="secondary-button" />
                    </HBox>
                    <Label text="Nome:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="text-field" />
                    <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <Label fx:id="idLabel" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    <Label text="Senha:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                    <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="3" styleClass="text-field" />
                    <HBox spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="4">
                        <Button text="Deletar Conta" onAction="#handleDeleteAccount" styleClass="danger-button" />
                        <Button text="Logout" onAction="#handleLogout" styleClass="secondary-button" />
                    </HBox>
                </GridPane>
            </Tab>
            <Tab text="Emissor">
                <VBox spacing="10.0">
                    <TableView fx:id="emissorTable" styleClass="table-view">
                        <columns>
                            <TableColumn fx:id="emissorIdColumn" text="ID" prefWidth="50.0" />
                            <TableColumn fx:id="emissorDataColumn" text="Data" prefWidth="100.0" />
                            <TableColumn fx:id="emissorNomeColumn" text="Nome" prefWidth="150.0" />
                            <TableColumn fx:id="emissorPorteiroColumn" text="Porteiro" prefWidth="150.0" />
                            <TableColumn fx:id="emissorEmissorColumn" text="Emissor" prefWidth="150.0" />
                        </columns>
                    </TableView>
                </VBox>
            </Tab>
            <Tab text="Personalizar">
                <GridPane hgap="10.0" vgap="10.0" styleClass="form-grid">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    <Label text="Modo Claro/Escuro:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <HBox spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <Button text="Modo Claro" onAction="#handleLightMode" styleClass="secondary-button" />
                        <Button text="Modo Escuro" onAction="#handleDarkMode" styleClass="secondary-button" />
                    </HBox>
                    <Label text="Cor Secundária (Hex):" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="secondaryColorField" promptText="#RRGGBB" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="text-field" />
                    <Button text="Aplicar" onAction="#handleApplySecondaryColor" GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="primary-button" />
                    <Button text="Resetar para Fábrica" onAction="#handleReset" GridPane.columnIndex="1" GridPane.rowIndex="3" styleClass="secondary-button" />
                </GridPane>
            </Tab>
        </TabPane>
    </center>
</BorderPane>